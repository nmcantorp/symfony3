{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">{{ titulo }}</div>
                <div class="panel-body">
                    <p>
                        <a class = 'btn btn-default btn-xs' role = 'button' href='{{ path('catalogo.crear') }}'>crear (+)</a>
                    </p>
                    <table class="table table-striped table-hover"
                           style="width:700px; text-align:left">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for producto in productos %}
                            <tr>
                                <td>{{ producto.id }}</td>
                                <td>{{ producto.name }}</td>
                                <td>{{ producto.prize }}</td>
                                <td>{{ producto.quantity }}</td>
                                <td><a class='btn btn-primary btn-xs' role='button'
                                       href='{{ path('catalogo.crear', {'id': producto.id}) }}'>editar</a></td>
                                <td><a class='btn btn-danger btn-xs' role='button'
                                       href='{{ path('catalogo.eliminar', {'id': producto.id}) }}'
                                       onclick="return confirm('seguro que desea eliminar?');">eliminar</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}